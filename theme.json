{
  "$schema": "https://evoreflect.com/schemas/cli-theme-v2.json",
  "name": "default2",
  "version": "2.4.0",
  "author": "EvoReflect Team",
  "description": "EvoReflect default2 theme with Blue/Warm dual palette light/dark mode support (Issue #1125)",
  "type": "hybrid",
  "default_mode": "dark",
  "gui_theme": "gui-theme.json",
  "modes": {
    "light": {
      "color_scheme": {
        "primary": "#C56F0D",
        "secondary": "#F2952C",
        "accent": "#3654B0",
        "background": "#FBDDBC",
        "foreground": "#3D2200",
        "success": "#4D8030",
        "error": "#C43030",
        "warning": "#C56F0D",
        "info": "#3654B0",
        "border": "#F6B974",
        "muted": "#A07840",
        "highlight": "#F6B974",
        "agent_reactive": "#4D8030",
        "agent_deliberative": "#3654B0",
        "agent_metacognitive": "#9DAEE1",
        "thought_color": "#C56F0D",
        "action_color": "#4D8030",
        "observation_color": "#3654B0"
      },
      "syntax_theme": "github-light",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    },
    "dark": {
      "color_scheme": {
        "primary": "#9DAEE1",
        "secondary": "#637ECF",
        "accent": "#F2952C",
        "background": "#121C3B",
        "foreground": "#E8ECF6",
        "success": "#7EC89D",
        "error": "#E87070",
        "warning": "#F6B974",
        "info": "#637ECF",
        "border": "#243875",
        "muted": "#3654B0",
        "highlight": "#243875",
        "agent_reactive": "#7EC89D",
        "agent_deliberative": "#637ECF",
        "agent_metacognitive": "#F2952C",
        "thought_color": "#F6B974",
        "action_color": "#7EC89D",
        "observation_color": "#9DAEE1"
      },
      "syntax_theme": "monokai",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    }
  }
}
