{
  "$schema": "https://evoreflect.com/schemas/template-cli-theme-v1.json",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "color_scheme": {
        "primary": "#FF6F61",
        "secondary": "#FFB347",
        "accent": "#42A5F5",
        "background": "#1C1C1C",
        "foreground": "#F5E8D8",
        "success": "#66BB6A",
        "error": "#EF5350",
        "warning": "#FFA726",
        "info": "#42A5F5",
        "border": "#3A3A3A",
        "muted": "#8C7A68",
        "highlight": "#262626",
        "agent_reactive": "#66BB6A",
        "agent_deliberative": "#42A5F5",
        "agent_metacognitive": "#FF6F61",
        "thought_color": "#FFA726",
        "action_color": "#66BB6A",
        "observation_color": "#FF6F61"
      },
      "syntax_theme": "monokai",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    },
    "light": {
      "color_scheme": {
        "primary": "#F97316",
        "secondary": "#EA580C",
        "accent": "#2563EB",
        "background": "#FFF7ED",
        "foreground": "#3F2A1C",
        "success": "#16A34A",
        "error": "#DC2626",
        "warning": "#D97706",
        "info": "#2563EB",
        "border": "#E7D5C0",
        "muted": "#9C8070",
        "highlight": "#FED7AA",
        "agent_reactive": "#16A34A",
        "agent_deliberative": "#2563EB",
        "agent_metacognitive": "#F97316",
        "thought_color": "#D97706",
        "action_color": "#16A34A",
        "observation_color": "#2563EB"
      },
      "syntax_theme": "github-light",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    }
  }
}
