{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default2",
  "version": "2.4.0",
  "author": "EvoReflect Team",
  "description": "Default2 GUI theme with Blue/Warm dual palette light/dark mode and responsive design support (Issue #1125)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#121C3B",
          "secondary": "#243875",
          "tertiary": "#3654B0"
        },
        "foreground": {
          "primary": "#E8ECF6",
          "secondary": "#B8C4E0",
          "muted": "#3654B0"
        },
        "accent": {
          "primary": "#9DAEE1",
          "secondary": "#F2952C"
        },
        "semantic": {
          "success": "#7EC89D",
          "error": "#E87070",
          "warning": "#F6B974",
          "info": "#637ECF"
        },
        "border": "#243875"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton",
        "customizations": {
          "--color-surface-50": "232 236 246",
          "--color-surface-100": "214 223 239",
          "--color-surface-200": "184 196 224",
          "--color-surface-300": "157 174 225",
          "--color-surface-400": "122 150 213",
          "--color-surface-500": "99 126 207",
          "--color-surface-600": "54 84 176",
          "--color-surface-700": "36 56 117",
          "--color-surface-800": "18 28 59",
          "--color-surface-900": "13 21 48",
          "--color-primary-50": "238 241 250",
          "--color-primary-100": "221 227 245",
          "--color-primary-200": "191 201 233",
          "--color-primary-300": "157 174 225",
          "--color-primary-400": "157 174 225",
          "--color-primary-500": "157 174 225",
          "--color-primary-600": "128 152 213",
          "--color-primary-700": "99 126 207",
          "--color-primary-800": "74 100 184",
          "--color-primary-900": "54 84 176",
          "--color-secondary-500": "242 149 44",
          "--color-tertiary-500": "99 126 207",
          "--color-success-500": "126 200 157",
          "--color-warning-500": "246 185 116",
          "--color-error-500": "232 112 112"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#FBDDBC",
          "secondary": "#F9D4A0",
          "tertiary": "#F6B974"
        },
        "foreground": {
          "primary": "#3D2200",
          "secondary": "#7D4608",
          "muted": "#A07840"
        },
        "accent": {
          "primary": "#C56F0D",
          "secondary": "#3654B0"
        },
        "semantic": {
          "success": "#4D8030",
          "error": "#C43030",
          "warning": "#C56F0D",
          "info": "#3654B0"
        },
        "border": "#F6B974"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "evoreflect-light",
        "customizations": {
          "--color-surface-50": "255 244 232",
          "--color-surface-100": "253 233 209",
          "--color-surface-200": "251 221 188",
          "--color-surface-300": "249 212 160",
          "--color-surface-400": "246 185 116",
          "--color-surface-500": "197 111 13",
          "--color-surface-600": "160 120 64",
          "--color-surface-700": "125 70 8",
          "--color-surface-800": "74 46 8",
          "--color-surface-900": "61 34 0",
          "--color-primary-500": "197 111 13",
          "--color-primary-600": "168 92 10",
          "--color-primary-700": "125 70 8",
          "--color-secondary-500": "242 149 44",
          "--color-tertiary-500": "54 84 176",
          "--color-success-500": "77 128 48",
          "--color-warning-500": "197 111 13",
          "--color-error-500": "196 48 48"
        }
      }
    }
  }
}
