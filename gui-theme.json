{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default2",
  "version": "2.5.0",
  "author": "EvoReflect Team",
  "description": "Default2 GUI theme with warm/cool dual palette light/dark mode and responsive design support (Issue #1125, #1131)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#1C1C1C",
          "secondary": "#262626",
          "tertiary": "#3A3A3A"
        },
        "foreground": {
          "primary": "#F5E8D8",
          "secondary": "#D4C4B0",
          "muted": "#8C7A68"
        },
        "accent": {
          "primary": "#FF6F61",
          "secondary": "#FFB347"
        },
        "semantic": {
          "success": "#66BB6A",
          "error": "#EF5350",
          "warning": "#FFA726",
          "info": "#42A5F5"
        },
        "border": "#3A3A3A"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton"
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#FFF7ED",
          "secondary": "#FFF1E6",
          "tertiary": "#FED7AA"
        },
        "foreground": {
          "primary": "#3F2A1C",
          "secondary": "#5C4033",
          "muted": "#9C8070"
        },
        "accent": {
          "primary": "#F97316",
          "secondary": "#EA580C"
        },
        "semantic": {
          "success": "#16A34A",
          "error": "#DC2626",
          "warning": "#D97706",
          "info": "#2563EB"
        },
        "border": "#E7D5C0"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton"
      }
    }
  }
}
