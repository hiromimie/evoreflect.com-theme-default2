{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default2",
  "version": "2.4.0",
  "author": "EvoReflect Team",
  "description": "Default2 GUI theme with Blue/Warm dual palette light/dark mode and responsive design support (Issue #1125)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#121C3B",
          "secondary": "#243875",
          "tertiary": "#3654B0"
        },
        "foreground": {
          "primary": "#E8ECF6",
          "secondary": "#B8C4E0",
          "muted": "#3654B0"
        },
        "accent": {
          "primary": "#9DAEE1",
          "secondary": "#F2952C"
        },
        "semantic": {
          "success": "#7EC89D",
          "error": "#E87070",
          "warning": "#F6B974",
          "info": "#637ECF"
        },
        "border": "#243875"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton",
        "customizations": {
          "--color-primary-500": "#9DAEE1",
          "--color-secondary-500": "#F2952C"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#FBDDBC",
          "secondary": "#F9D4A0",
          "tertiary": "#F6B974"
        },
        "foreground": {
          "primary": "#3D2200",
          "secondary": "#7D4608",
          "muted": "#A07840"
        },
        "accent": {
          "primary": "#C56F0D",
          "secondary": "#3654B0"
        },
        "semantic": {
          "success": "#4D8030",
          "error": "#C43030",
          "warning": "#C56F0D",
          "info": "#3654B0"
        },
        "border": "#F6B974"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "evoreflect-light",
        "customizations": {}
      }
    }
  }
}
