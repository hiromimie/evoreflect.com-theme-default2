{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v0.5.json",
  "name": "default2",
  "version": "0.5.0",
  "author": "EvoReflect Team",
  "description": "EvoReflect default2 theme v0.5.0 with Blue/Warm dual palette token-based customization (Issue #1125)",
  "license": "MIT",
  "default_mode": "dark",
  "type": "hybrid",
  "category": "dark",
  "globals": {
    "fontFamily": {
      "sans": "Inter, Noto Sans JP, system-ui, sans-serif",
      "mono": "JetBrains Mono, Consolas, monospace"
    }
  },
  "modes": {
    "dark": {
      "globals": {
        "fontFamily": {
          "sans": "Inter, Noto Sans JP, system-ui, sans-serif",
          "mono": "JetBrains Mono, Consolas, monospace"
        }
      },
      "tokens": {
        "colors": {
          "surface": {
            "50": "#E8ECF6",
            "100": "#D6DFEF",
            "200": "#B8C4E0",
            "300": "#9DAEE1",
            "400": "#7A96D5",
            "500": "#637ECF",
            "600": "#3654B0",
            "700": "#243875",
            "800": "#121C3B",
            "900": "#0D1530",
            "950": "#080E22"
          },
          "primary": {
            "50": "#EEF1FA",
            "100": "#DDE3F5",
            "200": "#BFC9E9",
            "300": "#9DAEE1",
            "400": "#9DAEE1",
            "500": "#9DAEE1",
            "600": "#8098D5",
            "700": "#637ECF",
            "800": "#4A64B8",
            "900": "#3654B0"
          },
          "secondary": {
            "500": "#637ECF",
            "600": "#4A64B8"
          },
          "accent": {
            "500": "#F2952C",
            "600": "#D9810F"
          },
          "success": {
            "500": "#7EC89D",
            "600": "#68B787"
          },
          "warning": {
            "500": "#F6B974",
            "600": "#F0A64E"
          },
          "error": {
            "500": "#E87070",
            "600": "#D55A5A"
          },
          "info": {
            "500": "#637ECF",
            "600": "#4A64B8"
          },
          "cli": {
            "primary": "#9DAEE1",
            "secondary": "#637ECF",
            "accent": "#F2952C",
            "background": "#121C3B",
            "foreground": "#E8ECF6",
            "success": "#7EC89D",
            "error": "#E87070",
            "warning": "#F6B974",
            "info": "#637ECF",
            "border": "#243875",
            "muted": "#3654B0",
            "highlight": "#243875"
          },
          "agent": {
            "reactive": "#7EC89D",
            "deliberative": "#637ECF",
            "metacognitive": "#F2952C"
          },
          "reasoning": {
            "thought": "#F6B974",
            "action": "#7EC89D",
            "observation": "#9DAEE1"
          }
        },
        "semantic": {
          "background": {
            "app": "{colors.surface.900}",
            "card": "{colors.surface.800}",
            "sidebar": "{colors.surface.800}",
            "header": "{colors.surface.800}",
            "footer": "{colors.surface.800}",
            "input": "{colors.surface.700}",
            "hover": "{colors.surface.700}",
            "active": "{colors.surface.600}",
            "selected": "{colors.primary.900}",
            "muted": "{colors.surface.950}"
          },
          "foreground": {
            "primary": "{colors.surface.50}",
            "secondary": "{colors.surface.300}",
            "muted": "{colors.surface.400}",
            "inverted": "{colors.surface.900}",
            "link": "{colors.primary.400}",
            "linkHover": "{colors.primary.300}",
            "success": "{colors.success.500}",
            "warning": "{colors.warning.500}",
            "error": "{colors.error.500}",
            "info": "{colors.info.500}"
          },
          "border": {
            "default": "{colors.surface.700}",
            "subtle": "{colors.surface.800}",
            "strong": "{colors.surface.600}",
            "focus": "{colors.primary.500}"
          }
        },
        "typography": {
          "fontSize": {
            "xs": "0.6875rem",
            "sm": "0.75rem",
            "base": "0.875rem",
            "lg": "1rem",
            "xl": "1.125rem",
            "2xl": "1.5rem",
            "3xl": "1.875rem"
          },
          "fontWeight": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
          },
          "lineHeight": {
            "none": 1,
            "tight": 1.25,
            "snug": 1.375,
            "normal": 1.5,
            "relaxed": 1.625,
            "loose": 2
          }
        },
        "spacing": {
          "0": "0",
          "1": "0.25rem",
          "2": "0.5rem",
          "3": "0.75rem",
          "4": "1rem",
          "5": "1.25rem",
          "6": "1.5rem",
          "8": "2rem",
          "10": "2.5rem",
          "12": "3rem",
          "16": "4rem"
        },
        "borderRadius": {
          "none": "0",
          "sm": "0.25rem",
          "default": "0.375rem",
          "md": "0.5rem",
          "lg": "0.75rem",
          "xl": "1rem",
          "full": "9999px"
        },
        "shadows": {
          "none": "none",
          "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
          "default": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
          "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
          "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
          "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
        }
      },
      "regions": {
        "header": {
          "visible": true,
          "height": "64px",
          "background": "{semantic.background.header}",
          "borderRadius": "0"
        },
        "footer": {
          "visible": true,
          "height": "32px",
          "background": "{semantic.background.footer}"
        },
        "sidebarLeft": {
          "visible": true,
          "width": "280px",
          "minWidth": "200px",
          "maxWidth": "400px",
          "background": "{semantic.background.sidebar}"
        },
        "sidebarRight": {
          "visible": false,
          "width": "280px"
        },
        "main": {
          "flex": "1",
          "overflow": "auto"
        },
        "chatArea": {
          "maxWidth": "800px",
          "padding": "1rem"
        },
        "toolsPanel": {
          "visible": true,
          "width": "320px",
          "background": "{semantic.background.sidebar}"
        }
      },
      "components": {
        "button": {
          "base": {
            "padding": "0.5rem 1rem",
            "borderRadius": "{borderRadius.default}",
            "fontWeight": "500",
            "transition": "all 0.2s"
          },
          "variants": {
            "primary": {
              "background": "{colors.primary.500}",
              "color": "white"
            },
            "secondary": {
              "background": "{colors.surface.700}",
              "color": "{colors.surface.100}"
            },
            "danger": {
              "background": "{colors.error.500}",
              "color": "white"
            }
          },
          "states": {
            "hover": {
              "opacity": 0.9
            },
            "disabled": {
              "opacity": 0.5,
              "cursor": "not-allowed"
            }
          }
        },
        "input": {
          "base": {
            "padding": "0.5rem 0.75rem",
            "background": "{semantic.background.input}",
            "borderRadius": "{borderRadius.default}",
            "border": "1px solid {semantic.border.default}",
            "color": "{semantic.foreground.primary}"
          },
          "states": {
            "focus": {
              "borderColor": "{semantic.border.focus}"
            }
          }
        },
        "card": {
          "base": {
            "background": "{semantic.background.card}",
            "borderRadius": "{borderRadius.lg}",
            "border": "1px solid {semantic.border.default}",
            "padding": "1rem"
          }
        },
        "chatBubble": {
          "base": {
            "borderRadius": "{borderRadius.lg}",
            "padding": "0.75rem 1rem"
          },
          "variants": {
            "user": {
              "background": "{colors.primary.900}",
              "color": "{colors.primary.100}"
            },
            "assistant": {
              "background": "{colors.surface.800}",
              "color": "{semantic.foreground.primary}"
            }
          }
        },
        "codeBlock": {
          "base": {
            "fontFamily": "var(--font-mono)",
            "fontSize": "{typography.fontSize.sm}",
            "background": "{colors.surface.950}",
            "borderRadius": "{borderRadius.md}",
            "padding": "1rem"
          }
        }
      },
      "animations": {
        "fadeIn": {
          "duration": "0.2s",
          "timingFunction": "ease-out",
          "keyframes": {
            "from": { "opacity": 0 },
            "to": { "opacity": 1 }
          }
        },
        "slideIn": {
          "duration": "0.3s",
          "timingFunction": "ease-out",
          "keyframes": {
            "from": { "transform": "translateY(-10px)", "opacity": 0 },
            "to": { "transform": "translateY(0)", "opacity": 1 }
          }
        }
      },
      "responsive": {
        "md": {
          "sidebarLeft": { "width": "240px" }
        },
        "sm": {
          "sidebarLeft": { "visible": false }
        }
      }
    },
    "light": {
      "tokens": {
        "colors": {
          "surface": {
            "50": "#3D2200",
            "100": "#4A2E08",
            "200": "#5A3D10",
            "300": "#7D4608",
            "400": "#A07840",
            "500": "#C56F0D",
            "600": "#F6B974",
            "700": "#F9D4A0",
            "800": "#FBDDBC",
            "900": "#FDE9D1",
            "950": "#FFF4E8"
          },
          "primary": {
            "500": "#C56F0D",
            "600": "#A85C0A"
          },
          "secondary": {
            "500": "#F2952C",
            "600": "#D9810F"
          },
          "cli": {
            "primary": "#C56F0D",
            "secondary": "#F2952C",
            "accent": "#3654B0",
            "background": "#FBDDBC",
            "foreground": "#3D2200",
            "success": "#4D8030",
            "error": "#C43030",
            "warning": "#C56F0D",
            "info": "#3654B0",
            "border": "#F6B974",
            "muted": "#A07840",
            "highlight": "#F6B974"
          }
        },
        "semantic": {
          "background": {
            "app": "{colors.surface.900}",
            "card": "{colors.surface.800}",
            "sidebar": "{colors.surface.800}",
            "header": "{colors.surface.800}",
            "footer": "{colors.surface.800}",
            "input": "{colors.surface.700}",
            "hover": "{colors.surface.600}"
          },
          "foreground": {
            "primary": "{colors.surface.50}",
            "secondary": "{colors.surface.200}",
            "muted": "{colors.surface.400}"
          },
          "border": {
            "default": "{colors.surface.600}",
            "subtle": "{colors.surface.700}",
            "strong": "{colors.surface.500}"
          }
        }
      },
      "regions": {
        "header": {
          "visible": true,
          "height": "64px",
          "background": "{semantic.background.header}",
          "borderRadius": "0"
        },
        "footer": {
          "visible": true,
          "height": "32px",
          "background": "{semantic.background.footer}"
        },
        "sidebarLeft": {
          "visible": true,
          "width": "280px",
          "minWidth": "200px",
          "maxWidth": "400px",
          "background": "{semantic.background.sidebar}"
        },
        "sidebarRight": {
          "visible": false,
          "width": "280px"
        },
        "main": {
          "flex": "1",
          "overflow": "auto"
        },
        "chatArea": {
          "maxWidth": "800px",
          "padding": "1rem"
        },
        "toolsPanel": {
          "visible": true,
          "width": "320px",
          "background": "{semantic.background.sidebar}"
        }
      }
    }
  }
}
